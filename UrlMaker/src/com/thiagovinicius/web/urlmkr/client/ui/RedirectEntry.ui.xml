<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.codeIdPadding {
		padding-right: 1em;
		width: 7em;
	}
	</ui:style>
	<g:HTMLPanel>
	    <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
	    	<g:Label ui:field="codeId" styleName="{style.codeIdPadding}"></g:Label>
	    	<g:TextBox ui:field="encoded" readOnly="true" visibleLength="80"></g:TextBox>
	    	<g:Label ui:field="copy" visible="false">Press Ctrl+C to copy</g:Label>
	    </g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 